package com.example.client;

import java.rmi.RemoteException;

import org.apache.axis2.AxisFault;

import addsimple.mdcc.ufc.br.AddSimple;
import addsimple.mdcc.ufc.br.AddSimpleDocument;
import addsimple.mdcc.ufc.br.AddSimpleResponseDocument;
import br.ufc.mdcc.addsimple.AddSimpleImplServiceStub;
import br.ufc.mdcc.addsimple.AddSimpleServiceStub;
import br.ufc.mdcc.addsimple.impl.AddSimpleDocumentImpl;
import br.ufc.mdcc.addsimple.impl.AddSimpleDocumentImpl.AddSimpleImpl;

public class AddSimpleClientAxis {

	private static final String AddSimpleDocument = null;

	public static void main(String[] args) {
		try {
			// TestServiceStub stub = new TestServiceStub("http://localhost:8000/api/");
			AddSimpleImplServiceStub stub = new AddSimpleImplServiceStub("http://localhost:8000");
	
			/// AddTripleDocument request = AddTripleDocument.Factory.newInstance();
			AddSimpleDocumentImpl request = AddSimpleDocument.Factory.newInstance();
			
			// AddTripleDocument.AddTriple data = request.addNewAddTriple();
		    AddSimpleImpl data = request.addNewAddSimple();
			
			// data.setA("1");
			// data.setB("2");
			// data.setC("3");
		    data.setArg0("1");
		    data.setArg1("2");
			
			// AddTripleResultDocument response = stub.add_triple(request);
		    AddSimpleResponseDocument response = stub.add_simple(request);
			
			// System.out.println(response.getAddTripleResult());
		    System.out.println(response.getAddSimpleResponse());
		} catch (AxisFault e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		} catch (RemoteException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		} catch (Error e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}
}
